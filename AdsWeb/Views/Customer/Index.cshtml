@model StaticPagedList<AdsEntity.AdsCustomer>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "客户管理";
}

@section Topcss {
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/bootstrap-validator/css/bootstrapValidator.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/bootstrap-switch/css/bootstrap-switch.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/iCheck/square/green.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/iCheck/square/green.css" rel="stylesheet" type="text/css" />
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>
            @ViewBag.SmallTitle
        </small>
    </h1>

</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12 cuscategorybtn">

            <div class="btn-group">
                <a class="btn btn-default cusiden" name="iden_0" href="@Url.Action("Index", "Customer", new { iden = 0, rid = Request.QueryString["rid"] })">全部客户：</a>

                @foreach (AdsEntity.AdsCustomer.IdentiyStatus item in Enum.GetValues(typeof(AdsEntity.AdsCustomer.IdentiyStatus)))
                {
                    string strName = Enum.GetName(typeof(AdsEntity.AdsCustomer.IdentiyStatus), item);//获取名称
                    int strVaule = (int)item;//获取值
                    <a class="btn btn-default cusiden" name="iden_@strVaule" href="@Url.Action("Index", "Customer", new { iden = strVaule, rid = Request.QueryString["rid"] })">@strName</a>
                }

            </div>

        </div>

        <div class="col-md-12 cuscategorybtn">

            <div class="btn-group">
                <a class="btn btn-default cusrole" name="role_0" href="@Url.Action("Index", "Customer", new { rid = 0, iden = Request.QueryString["iden"] })">全部类型：</a>
                @foreach (var item in (IEnumerable<AdsEntity.Category>)ViewData["CusRolebtn"])
                {
                    <a class="btn btn-default cusrole" name="role_@item.ID" href="@Url.Action("Index", "Customer", new { rid = item.ID, iden = Request.QueryString["iden"] })">@item.CategoryName</a>

                }
            </div>

        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="pull-left">
                        <button class="btn btn-success pull-right" data-toggle="modal" data-target="#addCustomer"><i class="fa fa-plus"></i> 新增客户</button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="col-sm-1">
                                    序号
                                </th>
                                <th class="col-sm-1">
                                    用户名
                                </th>
                                <th class="col-sm-2">
                                    邮箱
                                </th>
                                <th class="col-sm-2">
                                    状态
                                </th>
                                <th class="col-sm-1">
                                    认证状态
                                </th>
                                <th class="col-sm-5">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CustomerId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CustomerUserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CustomerEmail)
                                    </td>
                                    <td>
                                        <input type="checkbox"  name="status" value="@item.CustomerId" checked="@(item.CustomerStatus?"checked":"")" />
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.CustomerIdentity)
                                    </td>
                                    <td>

                                        @Html.AntiForgeryToken()
                                        @{
                                            <a class="btn btn-success btn-xs" href="@Url.Action("Edit", "Customer", new { id = item.CustomerId })"><span class="glyphicon glyphicon-edit"></span> 编辑</a>
                                            <button class="btn btn-danger btn-xs" type="button" onclick="delconfirm('@item.CustomerId','/Customer/DeleteConfirmed/','/Customer/Index')"><span class="glyphicon glyphicon-trash"></span> 删除</button>
                                            <button class="btn btn-info btn-xs" type="button" onclick="resetPassword('@item.CustomerId')"><span class="glyphicon glyphicon-lock"></span> 重置密码</button>

                                if (int.Parse(Request["iden"]) == 3)
                                {
                                    <button class="btn btn-success btn-xs" type="button" onclick="SetIdentity('@item.CustomerId',1)"><span class="glyphicon glyphicon-lock"></span> 认证通过</button>
                                            <button class="btn btn-danger btn-xs" type="button" onclick="SetIdentity('@item.CustomerId',0)"><span class="glyphicon glyphicon-lock"></span> 认证不通过</button>

                                }
                                else
                                {
                                    if (int.Parse(Request["iden"]) != 2)
                                    {   <a class="btn btn-warning btn-xs" href="@Url.Action("IdentityEdit", "Customer", new { id = item.CustomerId })"><span class="glyphicon glyphicon-star"></span> 身份认证</a>
                                    }

                                }



                                        }

                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pull-right">
                        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page, iden = Request.QueryString["iden"], rid = Request.QueryString["rid"] }),
    new PagedListRenderOptions
    {
        LinkToPreviousPageFormat = "上一页",
        LinkToNextPageFormat = "下一页",
        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
        DisplayLinkToLastPage = PagedListDisplayMode.Always,
        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
        DisplayLinkToNextPage = PagedListDisplayMode.Always,
        MaximumPageNumbersToDisplay = 5,
        LinkToFirstPageFormat = "首页",
        LinkToLastPageFormat = "最后一页",
        PageCountAndCurrentLocationFormat = "第 {0}页 共 {1}页"
    })
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- 新增客户的模态框开始 -->
<div class="modal fade" id="addCustomer" tabindex="-1" role="dialog" aria-labelledby="addCustomerLabel" aria-hidden="true" style="margin-top:100px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="addModalLabel">
                    新增客户
                </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="CustomerForm" method="post" action="@Url.Action("Create")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="CustomerBirthday" value="1900-01-01" />
                    <input type="hidden" name="CustomerRegTime" value="@System.DateTime.Now" />
                    <input type="hidden" name="CustomerLastLoginTime" value="@System.DateTime.Now" />
                    <input type="hidden" name="CustomerStatus" value="true" />
                    <div class="box-body">
                        <div class="form-group">
                            <label for="CustomerRole" class="col-sm-2 control-label">客户类型</label>
                            <div class="col-sm-10">
                                @Html.DropDownList("CustomerRole")
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="CustomerEmail" class="col-sm-2 control-label">邮箱地址</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="CustomerEmail" placeholder="邮箱">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="CustomerUserName" class="col-sm-2 control-label">用户名</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="CustomerUserName" placeholder="用户名">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">密码</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" name="CustomerPassword" placeholder="密码">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">重复密码</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" name="ConfirmPassword" placeholder="请再次输入密码">
                            </div>
                        </div>


                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                        <button type="submit" class="btn btn-primary pull-right">确定新增</button>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
<!-- 新增用户的模态框结束 -->
@section FootScripts {
    <script type="text/javascript" src="/plugins/iCheck/icheck.js"></script>
    <script type="text/javascript" src="/plugins/bootstrap-switch/js/bootstrap-switch.js"></script>
    <script type="text/javascript" src="/plugins/bootstrap-validator/js/bootstrapValidator.js"></script>
    <script type="text/javascript" src="/plugins/bootbox.min.js"></script>
    <script type="text/javascript" src="/Resource/js/SkyWeb.js"></script>
    <script type="text/javascript" src="/Resource/js/Customer.js"></script>
}
