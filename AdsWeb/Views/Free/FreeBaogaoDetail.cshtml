@using AdsEntity;
@{
    Layout = "~/Views/Shared/_FreeLayout.cshtml";
}


<div class="row skyindexrow">
    <div class=" text-orange skyindexrowtitle"><i class="glyphicon glyphicon-heart"></i> 自闭症行为量表的测评报告</div>
</div>

<div style="background-color:#ffffff">
    <table class="table table-bordered">
        <thead>
            <tr>

                <th>统计项目</th>
                <th>项目总分</th>
                <th>项目得分</th>
            </tr>

            @foreach (BaogaoDemention dem in ViewData["dem"] as List<BaogaoDemention>)
            {

               
                
                 <tr>

                 <td>@dem.demName</td>
               
                 <td>@dem.demReference</td>
                 <td>@dem.demScore</td>
            </tr>
                
                
            }
          
            <tr>
                <td>总分</td>
               
                <td>参考值：筛查界限57分/诊断界限67分</td>
                <td>@ViewBag.total</td>
            </tr>
        </thead>
        <tbody>

            <tr>

                <th colspan="4">量表详情</th>


            </tr>
            <tr>

                <td colspan="4">
                <div id="main" style="width: 100%;height:400px;"></div>
                </td>


            </tr>
            <tr>

                <th colspan="4">结果分析</th>


            </tr>
            <tr>

                
                   @if (int.Parse(ViewBag.total) >= 67)
{
    <td colspan="4">
        您的总得分是：@ViewBag.total 分.<br />
        根据量表筛查界限分为57分，诊断分数为67分。<br />
        您的分数超过了诊断分数，建议您继续进行康复训练
    </td>
}
                   @if (int.Parse(ViewBag.total) < 57)
                       {
    <td colspan="4">
        您的总得分是：@ViewBag.total 分.<br />
        根据量表筛查界限分为57分，诊断分数为67分。<br />
        根据您的测量结果，你未达到筛查分数，如有疑问建议到专业机构进行咨询。
    </td>
}
                 
                   @if (int.Parse(ViewBag.total) >= 57 && int.Parse(ViewBag.total) < 67)
                  
                   {
    <td colspan="4">
        您的总得分是：@ViewBag.total 分.<br />
        根据量表筛查界限分为57分，诊断分数为67分。<br />
        根据您的测量结果，你达到了筛查分数，建议您立刻到专业机构进行诊断，并马上开始进行康复训练。<br />
    </td>
}
                 
                   
        


            </tr>
            <tr>
                <th colspan="4">【客服咨询】</th>
            </tr>
            <tr>
                <td colspan="4">
                    客服电话：13945016428<br />
                </td>
            </tr>
            <tr>
                <td colspan="4">说明：<br />心理测量仅仅是对自闭症儿童的初步评测，测评结果仅供参考。<br/>
                    <br /><br /><br /><br />
                </td>
</tr>

        </tbody>

    </table>
    


</div>



@section FootScripts {
   <script type="text/javascript" src="/plugins/echarts.min.js"></script>

<script type="text/javascript">
    // 基于准备好的dom，初始化echarts实例
    var myChart = echarts.init(document.getElementById('main'));

    // 指定图表的配置项和数据
    var option = {
        title: {
           // text: '自闭症行为量表分析'
        },
        tooltip: {},
        legend: {
            data: ['自闭症行为']
        },
        xAxis: {
            data: ["感觉", "交往", "运动", "语言", "自理"]
        },
        yAxis: {},
        series: [{
            itemStyle: {
                normal: {
                    //好，这里就是重头戏了，定义一个list，然后根据所以取得不同的值，这样就实现了，
                    color: function (params) {
                        // build a color map as your need.
                        var colorList = [
                          '#C1232B',  '#E87C25', '#27727B',
                           '#FE8463',  '#26C0C0'
                        ];
                        return colorList[params.dataIndex]
                    },
                    //以下为是否显示，显示位置和显示格式的设置了
                    label: {
                        show: true,
                        position: 'top',
                        //                             formatter: '{c}'
                        formatter: '{b}\n{c}'
                    }
                }
            },
            type: 'bar',
            data: @ViewBag.chartsdata ,
        }]
    };

    // 使用刚指定的配置项和数据显示图表。
    myChart.setOption(option);
</script>

    }