@model AdsEntity.WechatEntity.WebchatJsUserinfo
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>星星宝贝</title>

    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/wechat/css/bootstrap.css">
    <link rel="stylesheet" href="~/wechat/font-awesome-4.7.0/css/font-awesome.css">
    <link rel="stylesheet" href="~/wechat/css/AdminLTE.css">
    <link rel="stylesheet" href="~/wechat/css/labelauty.css">
    <link rel="stylesheet" href="~/wechat/css/skym.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    @Html.Partial("_WechatMenuPartial")


    <div id="wapcontent">

        <div class="row">
            <!-- Widget: user widget style 1 -->
            <div class="box box-widget widget-user-2">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                <div class="widget-user-header bg-yellow">
                    <div class="widget-user-image">
                        <img class="img-circle" src="@Model.headimgurl" alt="User Avatar">
                    </div>
                    <!-- /.widget-user-image -->
                    <h3 class="widget-user-username">@Model.nickname</h3>
                    <h5 class="widget-user-desc">注册日期：2016-09-09</h5>
                </div>
                <div class="box-footer no-padding">
                    <ul class="nav nav-stacked">
                        <li><a href="@Url.Action("StarBaby")"><span class="glyphicon glyphicon-lock text-red"></span> 申请加入训练计划（先付款） <i class="pull-right fa fa-angle-right badgeicon"></i></a></li>
                        <li><a href="@Url.Action("Setting")"><span class="glyphicon glyphicon-user text-green"></span> 账号设置 <i class="pull-right fa fa-angle-right badgeicon"></i></a></li>
                        <li><a href="#"><span class="glyphicon glyphicon-info-sign text-info"></span> 关于 <i class="pull-right fa fa-angle-right badgeicon"></i><span class="pull-right">V1.0.0</span></a></li>
                    </ul>
                    <div class="sky-space"></div>
                    <ul class="nav nav-stacked">
                        <li><a href="@Url.Action("Logout")"><span class="glyphicon glyphicon-off text-red"></span> 退出登录 <i class="pull-right fa fa-angle-right badgeicon"></i></a></li>
                    </ul>
                </div>
            </div>
            <!-- /.widget-user -->

        </div>

    </div>





    <script src="~/wechat/js/jquery-2.2.3.min.js"></script>



    <script type="text/javascript">

        $(document).ready(function () {

            var url = "/Wechat/Calendar";
            // $('#wapcontent').load(url);

        });
        function adsmenu(ele, url) {
            $('.sky-nav-li a').removeClass('text-orange');
            $('.sky-nav-li a').removeClass('text-blue');
            $('.sky-nav-li a').addClass('text-blue');
            $(ele).removeClass('text-blue');
            $(ele).addClass('text-orange');
            $('#wapcontent').load(url);

        }

        function adshref(url) {
            $('#wapcontent').load(url);

        }
    </script>
</body>
</html>



