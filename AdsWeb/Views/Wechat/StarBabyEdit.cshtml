@model AdsEntity.AdsBaby
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>星童家庭训练</title>

    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/WechatResource/css/bootstrap.css">

    <link rel="stylesheet" href="~/WechatResource/css/AdminLTE.css">


    <link rel="stylesheet" href="~/WechatResource/css/skym.css">
    <link href="~/plugins/bootstrap-validator/css/bootstrapValidator.css" rel="stylesheet" type="text/css" />


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body style="margin:25px;">



  @using (Html.BeginForm("BabyEdit", "Wechat", FormMethod.Post, new { @class = "form-horizontal", @name = "BabyForm", @id = "BabyForm" }))
     {   <!-- text input -->
        <div class="form-group">
            
           @Html.AntiForgeryToken()
           @Html.HiddenFor(model => model.CustomerId, new { @Value = @ViewData["customerid"] })
            @Html.HiddenFor(model => model.BabyId, new { @Value = @Model.BabyId })
        </div>
        
        <div class="form-group">


            <input type="text" name="BabyName" id="BabyName" class="form-control input-lg" value="@Model.BabyName">
           
        </div>
        <div class="form-group">
            <select class="form-control input-lg" name="BabySex" id="BabySex">
                <option value="男">男</option>
                <option value="女">女</option>
            </select>
        </div>
        <div class="form-group">



            <input type="date" name="BabyBirthday" id="BabyBirthday" class="form-control input-lg" value="@Model.BabyBirthday">
        </div>


        <div class="skyapprow">

            <div class="form-group">
                <button type="submit" class="btn btn-block btn-success btn-lg">保存修改</button>
            </div>

        </div>
  }
    <script src="~/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script type="text/javascript" src="~/plugins/bootstrap-validator/js/bootstrapValidator.js"></script>

    <script type="text/javascript">

        //表单验证
        $('#BabyForm').bootstrapValidator({
            //        live: 'disabled',
            message: 'This value is not valid',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {

                BabyName: {
                    validators: {
                        notEmpty: {
                            message: '星宝姓名'
                        }

                    }
                },
                BabySex: {
                    validators: {
                        notEmpty: {
                            message: '性别不能为空'
                        }

                    }
                },
                BabyBirthday: {
                    validators: {
                        notEmpty: {
                            message: '出生日期不能为空'
                        }

                    }
                },

            }
        });

    </script>

</body>
</html>