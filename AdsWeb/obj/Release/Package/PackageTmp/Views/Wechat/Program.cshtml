@model AdsEntity.AdsVideo
@{
    Layout = "~/Views/Shared/_WechatLayout.cshtml";
}


<div class="row" style="background-color: #ffffff; ">
    <div class="col-xs-12" style="height: 150px;">
        这里是一个播放器
    </div>
    <div class="row" style="background-color:#666666;margin: 0px 0px 0px 10px;">
        <div class="col-xs-7" style="background-color:#ffffff; border-top: solid #efefef 1px;">
            <div class="text-center">
                <h5 class="sky-x-2">@Model.VideoName</h5>
                <span class="description-text">已有458个星宝训练过此项目</span>
                <!--<span class="description-text">34万星宝正在使用</span>-->
                <span></span>
            </div>

            <!-- /.description-block -->
        </div>
        <!-- /.col -->
        <div class="col-xs-5" style="background-color:#ffffff;border-left: solid #efefef 1px;border-top: solid #efefef 1px;">
            <div class="text-center">
                <h5 class="text-warning">本项目完成率</h5>
                <span class="description-text">1</span>
                <!--<span class="description-text">34万家庭正在使用</span>-->

            </div>

            <!-- /.description-block -->
        </div>

        <!-- /.col -->
    </div>

</div>


<div class="pingjiabtn col-xs-12 btn-group">

    <a class="col-xs-4 btn btn-success btn-lg" onclick="pingjia(@ViewBag.babyId, 0.8, @Model.VideoId)">
        熟练完成
    </a>
    <a class="col-xs-4 btn btn-warning btn-lg" onclick="pingjia(@ViewBag.babyId, 0.5, @Model.VideoId)">
        基本完成
    </a>
    <a class="col-xs-4 btn btn-danger btn-lg" onclick="pingjia(@ViewBag.babyId, 0.3, @Model.VideoId)">
        不能完成
    </a>

</div>



<table class="table" style="background-color:#ffffff">
    <tbody>


        <tr>
            <th colspan="4">【项目介绍】</th>
        </tr>
        <tr>
            <td colspan="4">
                @Html.Raw(Model.VideoInfo)
            </td>
        </tr>
        <tr>
            <th colspan="4">【适用对象】</th>
        </tr>
        <tr>
            <td colspan="4">
                @Html.Raw(Model.VideoFor)
            </td>
        </tr>

        <tr>
            <th colspan="4">【一对一咨询】</th>
        </tr>
        <tr>
            <td colspan="4">
                电话咨询：您可以拨打0451-2565265进行咨询<br />
                微信咨询：您可以添加微信号：125656265进行咨询<br />
            </td>
        </tr>

        <tr>
            <th colspan="4">【参考测量】</th>
        </tr>
        <tr>
            <td colspan="4">
                <a class="col-xs-12 btn btn-default" href="@Url.Action("Scale", "Wechat")">
                    再次测量

                </a>

            </td>
        </tr>

    </tbody>

</table>


@section FootScripts {

    <script type="text/javascript">

        function pingjia(babyId, pingjiaValue, videoId) {
            $.ajax({
                type: 'POST',
                url: "/Wechat/PingjiaCreate",
                data: {
                    pingjiaValue: pingjiaValue,
                    babyId: babyId,
                    videoId: videoId,
                },
                dataType: "json",
                success: function (data) {
                    if (data.MessageStatus)
                    { alert(data.MessageInfo); }
                    else
                    { alert("评价失败"); }

                }
            });

        }

    </script>
}

