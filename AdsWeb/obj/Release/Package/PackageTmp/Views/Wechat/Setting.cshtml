@model AdsEntity.AdsCustomer
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>星星宝贝</title>

    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/WechatResource/css/bootstrap.css">

    <link rel="stylesheet" href="~/WechatResource/css/AdminLTE.css">


    <link rel="stylesheet" href="~/WechatResource/css/skym.css">

    <link href="~/plugins/bootstrap-validator/css/bootstrapValidator.css" rel="stylesheet" type="text/css" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body style="margin:15px;">



   @using (Html.BeginForm("CustomerEdit", "Wechat", FormMethod.Post, new { @class = "form-horizontal", @name = "CustomerForm", @id = "CustomerForm" }))
                {
        <!-- text input -->
        <div class="form-group">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.CustomerId, new { @Value = @ViewData["customerid"] })

        </div>

        <div class="form-group">

            <input type="text" name="CustomerUserName" id="CustomerUserName" class="form-control input-lg" placeholder="用户名">
        </div>
        <div class="form-group">

            <input type="text" name="CustomerEmail" id="CustomerEmail" class="form-control input-lg" placeholder="邮箱">
        </div>


        <div class="form-group">

            <input type="date" name="CustomerBirthday" id="CustomerBirthday" class="form-control input-lg" placeholder="生日">
        </div>




        <div class="skyapprow">
            <div class="form-group">
                <button type="submit" class="btn btn-block btn-info btn-lg">保存并返回</button>
                <a href="@Url.Action("MemberCenter")" class="btn btn-block btn-default btn-lg">返回</a>
            </div>


        </div>
   }

    <script src="~/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script type="text/javascript" src="~/plugins/bootstrap-validator/js/bootstrapValidator.js"></script>
    <script type="text/javascript">

        //表单验证
        $('#CustomerForm').bootstrapValidator({
            //        live: 'disabled',
            message: 'This value is not valid',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {

                CustomerUserName: {
                    validators: {
                        notEmpty: {
                            message: '用户名不能为空'
                        }

                    }
                },
                CustomerEmail: {
                    validators: {
                        notEmpty: {
                            message: '邮箱不能为空'
                        },
                        emailAddress: {
                            message: '请输入正确的邮件地址如：123@qq.com'
                        }

                    }
                },
                CustomerBirthday: {
                    validators: {
                        notEmpty: {
                            message: '出生日期不能为空'
                        }

                    }
                },

            }
        });

    </script>





</body>
</html>