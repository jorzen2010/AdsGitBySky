@model AdsEntity.AdsCustomer
@{
    Layout = "~/Views/Shared/_WechatLayout.cshtml";
}

@if (string.IsNullOrEmpty(Model.CustomerOpenid))
{
        <div class="row">
            <!-- Widget: user widget style 1 -->
            <div class="box box-widget widget-user-2">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                <div class="widget-user-header bg-yellow">
                    <div class="widget-user-image">
                        <img class="img-circle" src="~/wechat/img/star.jpg" alt="User Avatar" width="128px" height="128px">
                    </div>
                    <!-- /.widget-user-image -->
                    <a href="@Url.Action("Login")">
                        <h4 class="widget-user-username">未登录</h4>
                    </a>
                    <h5 class="widget-user-desc">关爱星星宝贝</h5>
                </div>
                <div class="box-footer no-padding">
                    <ul class="nav nav-stacked">
                        <li><a href="@Url.Action("StarBaby")"><span class="glyphicon glyphicon-lock text-red"></span> 申请加入训练计划（先付款） <i class="pull-right fa fa-angle-right badgeicon"></i></a></li>
                        <li><a href="@Url.Action("Setting")"><span class="glyphicon glyphicon-user text-green"></span> 账号设置 <i class="pull-right fa fa-angle-right badgeicon"></i></a></li>
                        <li><a href="@Url.Action("About")"><span class="glyphicon glyphicon-info-sign text-info"></span> 关于 <i class="pull-right fa fa-angle-right badgeicon"></i><span class="pull-right">V1.0.0</span></a></li>
                    </ul>
                    <div class="sky-space"></div>
                    <ul class="nav nav-stacked">
                        <li><a href="@Url.Action("Login")"><span class="glyphicon glyphicon-off text-red"></span> 立刻登录 <i class="pull-right fa fa-angle-right badgeicon"></i></a></li>
                    </ul>
                </div>
            </div>
            <!-- /.widget-user -->

        </div>
}

else
{
    <div class="row">
        <!-- Widget: user widget style 1 -->
        <div class="box box-widget widget-user-2">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-yellow">
                <div class="widget-user-image">
                    <img class="img-circle" src="@Model.CustomerAvatar" alt="User Avatar">
                </div>
                <!-- /.widget-user-image -->
                <h4 class="widget-user-username">@Model.CustomerNickName</h4>
                <h5 class="widget-user-desc">注册日期：2016-09-09</h5>
            </div>
            <div class="box-footer no-padding">
                <ul class="nav nav-stacked">
                    <li><a href="@Url.Action("StarBaby")"><span class="glyphicon glyphicon-lock text-red"></span> 申请加入训练计划（先付款） <i class="pull-right fa fa-angle-right badgeicon"></i></a></li>
                    <li><a href="@Url.Action("Setting")"><span class="glyphicon glyphicon-user text-green"></span> 账号设置 <i class="pull-right fa fa-angle-right badgeicon"></i></a></li>
                    <li><a href="@Url.Action("About")"><span class="glyphicon glyphicon-info-sign text-info"></span> 关于 <i class="pull-right fa fa-angle-right badgeicon"></i><span class="pull-right">V1.0.0</span></a></li>
                </ul>
                <div class="sky-space"></div>
                <ul class="nav nav-stacked">
                    <li><a href="@Url.Action("Logout")"><span class="glyphicon glyphicon-off text-red"></span> 退出登录 <i class="pull-right fa fa-angle-right badgeicon"></i></a></li>
                </ul>
            </div>
        </div>
        <!-- /.widget-user -->

    </div>

}